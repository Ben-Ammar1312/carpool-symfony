{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5 d-flex justify-content-center">
        <div class="card p-4 shadow-lg" style="width: 500px;">
            <h1 class="text-center">Inscription</h1>

            {% for flash_error in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ flash_error }}
                </div>
            {% endfor %}

            {% for flash_success in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ flash_success }}
                </div>
            {% endfor %}

            {{ form_start(form) }}

            <div class="form-group mb-3">

                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group mb-3">

                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                {{ form_errors(form.prenom) }}
            </div>

            <div class="form-group mb-3">

                {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
                {{ form_errors(form.telephone) }}
            </div>

            <div class="form-group mb-3">

                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                {{ form_errors(form.email) }}
            </div>


            <div class="form-group mb-3">

                {{ form_widget(form.genre, {'attr': {'class': 'form-control', 'placeholder': 'Genre'}}) }}
                {{ form_errors(form.genre) }}
            </div>

            <div class="form-group mb-3">

                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                {{ form_errors(form.plainPassword) }}
            </div>

            <div class="form-group mb-3">

                {{ form_widget(form.confirm_password, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
                {{ form_errors(form.confirm_password) }}
            </div>

            <div class="form-group mb-3">

                {{ form_widget(form.profilePic, {'attr': {'class': 'form-control-file'}}) }}
                {{ form_errors(form.profilePic) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.agreeTerms, 'Accepter les termes', {'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_errors(form.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-primary w-100">S'inscrire</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
